<%- include("partials/header") %>

<h2 class="my-4">CHRISTMAS MARKET</h2>
<a href="/products/new" class="btn btn-primary">Add new product</a>
<div class="row gx-5 gy-5 my-4">
  <% if(products.length > 0) { %> <% products.forEach(product => { %>
  <div class="col-12 col-sm-6 col-lg-4">
    <div class="card">
      <img src="<%= product.image %>" class="card-img-top bg-secondary" alt="product" style="height: 250px" />
      <div class="card-body">
        <h4 class="card-title"><%= product.title %></h4>
        <p class="card-text"><%= product.description.substring(0, 100)%>...</p>
        <p class="text-muted" style="height: 50px">
          <%= product.createdAt.toLocaleDateString("ro") %> <%= product.createdAt.toLocaleTimeString("ro") %>
        </p>
        <a href="/products/<%= product.id %>" class="btn btn-primary">View Product Details</a>
      </div>
    </div>
  </div>
  <% }) %> <% } else { %>
  <h1>No products found! Start adding some?</h1>
  <% } %>
</div>

<%- include("partials/footer") %>
