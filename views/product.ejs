<%- include("partials/header") %>

  <h1 class="my-3"><%= product.title %></h1>
  <p class="text-muted my-3">
    <%= product.createdAt.toLocaleDateString("ro") %> <%= product.createdAt.toLocaleTimeString("ro") %>
  </p>
  <a href="/" class="btn btn-secondary">All Products</a>
  <a href="/products/edit/<%= product.id %>" class="btn btn-info mx-1">Edit</a>
  <form action="/products/<%= product.id %>?_method=DELETE" method="POST" class="d-inline">
    <button type="submit" class="btn btn-danger mx-1">Delete</button>
  </form>
  <p class="mt-4"><%= product.description %></p>
  </div>

  <%- include("partials/footer") %>